<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head',{title}) %>
  <body>
    <header><%- include('./partials/navbar') %></header>
    <main>
      <%- include('./partials/sidebar') %>
      <div class="container">
        <div class="row">
          <div class="col s12">
            <h1 class="truncate">ID: <%= bookinstance._id %></h1>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <table>
              <tbody>
                <tr>
                  <th>Title</th>
                  <td>
                    <a href="<%= bookinstance.book.url %>">
                      <%= bookinstance.book.title %>
                    </a>
                  </td>
                </tr>
                <tr>
                  <th>Imprint</th>
                  <td><%= bookinstance.imprint %></td>
                </tr>
                <tr>
                  <th>Status</th>
                  <td
                    class="<%- bookinstance.status === 'Available' ? 'green-text' : 'red-text' %>"
                  >
                    <%= bookinstance.status %>
                  </td>
                </tr>
                <% if (bookinstance.status !== 'Available') { %>
                <tr>
                  <th>Due back</th>
                  <td><%= bookinstance.due_back_formatted %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row center-align">
          <div class="col s12">
            <div class="card red lighten-5">
              <div class="card-content red-text">
                <p>
                  <strong>
                    Are you sure you want to delete this book instance?
                  </strong>
                </p>
              </div>
              <div class="card-actions" style="padding-bottom: 1rem">
                <form action="" method="post">
                  <input
                    type="text"
                    hidden
                    value="<%= bookinstance._id %>"
                    disabled
                    name="id"
                  />
                  <button class="btn red" type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer></footer>
  </body>
</html>
