<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head',{title}) %>
  <body>
    <header><%- include('./partials/navbar') %></header>
    <main>
      <%- include('./partials/sidebar') %>
      <div class="container">
        <h1>Genre: <%= genre.name %></h1>
        <% if (genre_books.length > 0) { %> <% genre_books.forEach(book => { %>
        <div class="row">
          <div class="card blue darken-1 hoverable">
            <div class="card-content white-text">
              <span class="card-title">
                <a class="white-text" href="<%= book.url %>"
                  ><%= book.title %></a
                >
              </span>
              <p><%= book.summary %></p>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <h5>This genre has no books</h5>
        <% } %>
        <div class="row">
          <div class="col s12 center-align">
            <a class="btn" href="<%= genre.url %>/delete">Delete Genre</a>
          </div>
        </div>
      </div>
    </main>
    <footer></footer>
  </body>
</html>
