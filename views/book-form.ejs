<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head',{title}) %>
  <body>
    <header><%- include('./partials/navbar') %></header>
    <main>
      <%- include('./partials/sidebar') %>
      <div class="container">
        <h1><%= title %></h1>
        <form action="" method="post">
          <div class="row">
            <div class="col s12">
              <div class="card red">
                <div class="card-content white-text">
                  <p>An asterisk (*) denotes a required field.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="title">Title(*)</label>
              <input type="text" id="title" name="title" />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <select class="browser-default" name="author" id="author">
                <option value="" disabled selected>Choose an author(*)</option>
                <% authors.forEach(author => { %>
                <option value="<%= author._id %>"><%= author.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="summary">Summary(*)</label>
              <input type="text" id="summary" name="summary" />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="isbn">ISBN(*)</label>
              <input type="text" id="isbn" name="isbn" />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <fieldset>
                <legend>Select Genre(s)(*)</legend>
                <% genres.forEach(genre => { %>
                <p class="col s12 m6 l4 xl3">
                  <label>
                    <input
                      class="filled-in"
                      type="checkbox"
                      name="genre"
                      value="<%= genre._id %>"
                    />
                    <span><%= genre.name %></span>
                  </label>
                </p>
                <% }) %>
              </fieldset>
            </div>
          </div>
          <div class="row">
            <div class="col s12 center-align">
              <button class="btn" type="submit">Submit</button>
            </div>
          </div>
        </form>
        <% if (locals.errors) { errors.forEach(e => { %>
        <p><%= e.msg %></p>
        <% })} %>
      </div>
    </main>
    <footer></footer>
  </body>
</html>
