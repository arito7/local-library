<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head',{title}) %>
  <body>
    <header><%- include('./partials/navbar') %></header>
    <main>
      <%- include('./partials/sidebar') %>
      <div class="container">
        <h1><%= title %></h1>
        <form action="" method="post">
          <div class="row">
            <div class="col s12">
              <div class="card red">
                <div class="card-content white-text">
                  <p>An asterisk (*) denotes a required field.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <select class="browser-default" name="book" id="book">
                <option value="" disabled selected>Choose a Book(*)</option>
                <% book_list.forEach(book => { %>
                <option value="<%=book._id%>"><%= book.title %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="imprint">Imprint(*)</label>
              <input type="text" id="imprint" name="imprint" />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <label for="due_date">Date when book available</label>
              <input
                type="date"
                id="due_date"
                name="due_date"
                placeholder="mm/dd/yyy"
              />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <select class="browser-default" name="status" id="status">
                <option value="" disabled selected>
                  Choose current status(*)
                </option>
                <option value="Maintenance">Maintenance</option>
                <option value="Available">Available</option>
                <option value="Loaned">Loaned</option>
                <option value="Reserved">Reserved</option>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="col s12 center-align">
              <button class="btn" type="submit">Submit</button>
            </div>
          </div>
        </form>
        <% if (locals.errors) { errors.forEach(e => { %>
        <p><%= e.msg %></p>
        <% })} %>
      </div>
    </main>
    <footer></footer>
  </body>
</html>
